# FastAPI
API_HOST=0.0.0.0
API_PORT=8000
API_ENVIRONMENT=development
API_DEBUG=True
# JSON list for CORS origins
API_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:8000"]
API_API_PREFIX=/api/v1

# LLM (Transformers)
LLM_MODEL_NAME=/mnt/c/ai_models/llm/Qwen2.5-7B-Instruct
# cuda|cpu|auto
LLM_DEVICE=auto
# 建議 CUDA 可用時用 float16；CPU fallback 時將自動切 float32
LLM_TORCH_DTYPE=float16
# 量化選項（優先使用 4bit，無 GPU 時會自動跳過量化到 CPU）
LLM_LOAD_IN_4BIT=True
LLM_LOAD_IN_8BIT=False
LLM_PRELOAD=False
LLM_ALLOW_CPU_FALLBACK=True
LLM_FALLBACK_DEVICE=cpu

# RAG / Chroma
RAG_CHROMA_PERSIST_DIR=./backend/data/chroma_db
RAG_COLLECTION_NAME=super_wings_knowledge
RAG_AUTO_INDEX=True

# ComfyUI / Media (paths optional)
COMFYUI_SERVER_ADDRESS=127.0.0.1:8188
COMFYUI_API_ENDPOINT=http://127.0.0.1:8188/prompt
COMFYUI_WS_ENDPOINT=ws://127.0.0.1:8188/ws
COMFYUI_OUTPUT_DIR=./assets/generated

# TTS / Audio
TTS_OUTPUT_DIR=./assets/audio/voices
AUDIOGEN_OUTPUT_DIR=./assets/audio/effects
